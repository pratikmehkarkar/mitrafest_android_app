<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalbck">

    <LinearLayout
        android:id="@+id/headerView"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp">
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerView">

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/card1"
        android:background="#E5E4E2"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clg"
                android:layout_alignParentTop="true"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Mr. Shubham Rajodiya"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dclg"
                android:textSize="15dp"
                android:text="Developer Esperanza App,\nFinal Year CSE, PRMITR,Badnera\nContact :+91 8308407618\ne-mail :shubham.rajodiya.sr@gmail.com"
                android:textStyle="italic"
                android:layout_below="@+id/clg"
                android:layout_alignLeft="@+id/clg"
                android:layout_alignStart="@+id/clg" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#E5E4E2"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/psm"
                    android:layout_alignParentTop="true"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="Mr. Pratik Mehkarkar"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/psmd"
                    android:textSize="15dp"
                    android:text="Developer Esperanza App,\nFinal Year IT, PRMITR,Badnera\nContact :+91 8975970500\ne-mail : pratikmehkarkar@gmail.com"
                    android:textStyle="italic"
                    android:layout_below="@+id/psm"
                    android:layout_alignLeft="@+id/psm"
                    android:layout_alignStart="@+id/psm" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
    </RelativeLayout>